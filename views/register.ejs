<% include ./partials/header.ejs %>
  <div class="flex items-center justify-center h-screen bg-zinc-300">
    <div class="bg-zinc-100 px-5 py-8 rounded-lg max-w-sm w-full">
      <h1 class="text-3xl text-center text-zinc-700 font-semibold mb-6">Create new account</h1>
      <form action="/register" method="post" class="space-y-4">
        <input class="border rounded-md block w-full px-3 py-2" type="text" name="fullName" placeholder="Full Name">
        <input class="border rounded-md block w-full px-3 py-2" type="text" name="username" placeholder="Username">
        <input class="border rounded-md block w-full px-3 py-2" type="email" name="email" placeholder="Email">
        <input class="border rounded-md block w-full px-3 py-2" type="number" name="contact" placeholder="Contact">
        <input class="border rounded-md block w-full px-3 py-2" type="password" name="password" placeholder="Password">
        <button class="bg-red-600 text-white rounded-full w-full py-2">Register</button>
        <a href="/login" class="mt-4 text-sm font-semibold text-zinc-700 block text-center">Already have an account?</a>
      </form>
    </div>
  </div>
<% include ./partials/footer.ejs %>