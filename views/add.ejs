<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen px-10 py-5">
        <h1>Create a new post</h1>
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 px-3 py-2" type="file" name="postImage">
            <input class="block w-1/3 px-3 py-2 border-2 rounded-lg mt-3" type="text" placeholder="Title" name="title">
            <textarea class="block w-1/3 h-60 px-3 py-2 border-2 rounded-lg mt-3" type="text" placeholder="Description" name="description"></textarea>
            <input class="block w-1/3 px-3 py-2 rounded-lg mt-3 bg-green-500 cursor-pointer hover:bg-green-600" type="submit" value="Create Post">
        </form>
    </div>
