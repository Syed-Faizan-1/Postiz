<% include ./partials/header.ejs %>
    <div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
        <form id="uploadform" action="/fileupload" method="post" enctype="multipart/form-data" hidden>
            <input type="file" name="image">
        </form>
        <div class="profdets flex flex-col items-center mt-20">
            <div class="relative">
                <span id="uploadicon" class="cursor-pointer w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
                    <i class="ri-pencil-fill text-zinc-800"></i>
                </span>
                <div class="w-40 h-40 bg-zinc-200 rounded-full overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage%>" alt="">
                </div>
            </div>
            <h1 class="mt-5 text-2xl font-semibold"><%= user.fullName%></h1>
            <h3 class="text-md">@<%= user.username%></h3>
            <a href="/edit" class="mt-5 px-10 py-3 bg-zinc-700 rounded-full text-xs font-semibold">Edit</a>
            <button class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-3">Add New Post</button>
        </div>
        <div class="cards flex flex-wrap gap-10 px-10 mt-10">
            <div class="card">
                <div class="about w-52 h-40 bg-white rounded-lg overflow-hidden ">
                    <img class="w-full h-full object-cover" src="" alt="">
                </div>
                <h3 class="text-xl font-semibold mt-3">heading</h3>
                <h5 class="text-sm font-medium opacity-60">Pins</h5>
            </div>
        </div>
    </div>
    <script>
        document.querySelector("#uploadicon").addEventListener("click", function () {
            document.querySelector("#uploadform input").click();
        })
        document.querySelector("#uploadform input").addEventListener("change", function(){
            document.querySelector("#uploadform").submit();
        })
    </script>
    <% include ./partials/footer.ejs %>